class Home {
  constructor() {
    // Create the page
    this.page = document.createElement("div");
    // Give it a class name and id
    this.page.id = "home-page";
    this.page.classList.add("main-content");

    // Add inner html
    this.page.innerHTML = `
    <div class="description">
      <!-- <h4>A database of information about the state of our global environment.</h4> -->
      <h1>Data of the land usage in each country.</h1>
    </div>
    
    <u><h3>Connecting to the api</h3></u>
    
    <div class="endpoints">
      <h4>Endpoints:</h4>
        <ul>
            <li>
                <code>GET 'https://ecodb.herokuapp.com/api/v1/countries' </code> 
            </li>
            <li>
                <code>GET 'https://ecodb.herokuapp.com/api/v1/countries/:id' </code>
            </li>
        </ul>
    </div>
    
    <div class="endpoints-notes">
        <h4>Notes:</h4>
        <p>
            <i>You can get the land usage for the world from </i><b>id: 214</b>
        </p>
        <p>
            <i>You can get the land usage for regions from </i><b>id: 215 - id: 221</b>
        </p>
        <p>
            <i>You can get the land usage for low-high income areas from </i><b>id: 222 - id: 225</b>
        </p>
    </div>
    `;
  }
}
