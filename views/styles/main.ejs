body {
  font-size: 1.6rem;
  font-weight: 400;
  line-height: 1.7;
  background-color: #228B22;
  font-family: "Fira Code", monospace;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  font-weight: 600;
}
p {
  font-weight: 400;
}

ul {
  list-style: none;
}

a {
  color: 	#7CFC00;
  text-shadow: .1rem 0 .5rem #006400;
}

a:visited {
  color: #006400;
} 

#root {
  height: 100%;
  width: 90%;
  background-color: #fff;
}
