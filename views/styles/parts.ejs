/* Buttons */
button {
  padding: 0.5rem 1rem;
  margin-left: 1rem;
  font-weight: 600;
  font-size: 1.6rem;
  cursor: pointer;
}
/* Nav Buttons */
button[class*="nav"] {
  background-color: rgba(255, 238, 255, 0);
  border: solid 0.5rem rgba(255, 238, 255, 0);
}

button[class*="nav"]:focus {
  outline: 0;
}

button[class*="nav"]:hover {
  border-top: solid 0.5rem black;
  border-bottom: solid 0.5rem black;
}

button[class*="nav"]:active {
  background-color: #000;
  color: #fefe;
  border: solid 0.5rem #fefe;
}

/* Code blocks */
code {
  font-size: 1.2em;
  padding: 0.3rem 0.5rem;
  color: rgb(18, 34, 43);
  background-color: #fefe;
}
