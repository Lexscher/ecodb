/* All Pages - Standard Styles */
.main-content {
  height: inherit;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}

/* list items */
.main-content li {
  margin-top: 1.5rem;
}

/* HOME */
#home-page {
  justify-content: flex-start;
  padding-top: 3.5rem;
}
#home-page code {
  background-color: transparent;
}
#home-page ul li:before {
  content: "\261B";
}

/* ABOUT */
#about-page {
    justify-content: flex-start;
    padding: 3.5rem 10rem 0;
}
